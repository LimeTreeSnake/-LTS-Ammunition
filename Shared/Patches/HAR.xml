<?xml version="1.0" encoding="utf-8" ?>

    <Patch>
        <Operation Class="PatchOperationAdd">
            <success>Always</success>
            <xpath>Defs/AlienRace.ThingDef_AlienRace/alienRace/raceRestriction[not(whiteApparelList)]</xpath>
            <value>
                <whiteApparelList />
            </value>
        </Operation>
        <Operation Class="PatchOperationAdd">
            <success>Always</success>
            <xpath>Defs/AlienRace.ThingDef_AlienRace/alienRace/raceRestriction/whiteApparelList</xpath>
            <value>
                <li>LTS_KitSmall</li>
                <li>LTS_KitMedium</li>
                <li>LTS_KitLarge</li>
                <li MayRequire="joeyjoejoeshabidoo.AirRifles">KitPelletSmall</li>
                <li MayRequire="joeyjoejoeshabidoo.AirRifles">KitPelletMedium</li>
                <li MayRequire="joeyjoejoeshabidoo.AirRifles">KitPelletLarge</li>
            </value>
        </Operation>

    </Patch>
