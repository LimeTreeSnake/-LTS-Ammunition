<?xml version="1.0" encoding="utf-8" ?>
    <Defs>
        <ThingDef Name="PackBase" ParentName="ApparelMakeableBase" Abstract="True">
            <thingClass>Ammunition.Things.Kit</thingClass>
            <recipeMaker>
                <recipeUsers>
                    <li>ElectricTailoringBench</li>
                    <li>HandTailoringBench</li>
                    <li MayRequire="DankPyon.Medieval.Overhaul">DankPyon_Workbench</li>
                    <li>CraftingSpot</li>
                </recipeUsers>
            </recipeMaker>
            <thingCategories>
                <li>Kits</li>
            </thingCategories>
            <stuffCategories>
                <li>Fabric</li>
                <li>Leathery</li>
            </stuffCategories>
            <soundInteract>Standard_Pickup</soundInteract>
            <tradeability>All</tradeability>
        </ThingDef>
        <ThingDef Name="PackSmallBase" ParentName="PackBase" Abstract="True">
            <costStuffCount>20</costStuffCount>
            <statBases>
                <!-- 0.25 per ammo -->
                <Mass>2</Mass>
                <WorkToMake>1000</WorkToMake>
                <Flammability>0.6</Flammability>
                <EquipDelay>2</EquipDelay>
            </statBases>
            <apparel>
                <bodyPartGroups>
                    <li>Waist</li>
                </bodyPartGroups>
                <layers>
                    <li>WeaponKit</li>
                </layers>
                <tags>
                    <li>Archotech</li>
                </tags>
            </apparel>
        </ThingDef>
